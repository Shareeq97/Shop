<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<table style="border: 2px solid black; width: 30%">
  <thead style="border: 2px solid black">
    <tr style="border: 2px solid black">
      <th colspan="3" style="border: 2px solid black">PROJECT LIST</th>
    </tr>
  </thead>

  <tbody style="border: 2px solid black">
    <% @current_user.projects.reload.each do |project| %>
      <tr style="border: 2px solid black">
        <td style="border: 2px solid black"><%= link_to project.project_name, user_project_path(project.user_id, project.id), method: :get %></td>
        <td style="border: 2px solid black"><%= link_to 'Show', user_project_path(project.user_id, project.id) %></td>
        <td style="border: 2px solid black"><%= link_to "", user_project_path(project.user_id, project.id), class: "glyphicon glyphicon-trash", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


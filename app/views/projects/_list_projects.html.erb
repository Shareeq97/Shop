<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<table class="project-list">
  <thead>
    <tr>
      <th colspan="3">PROJECT LIST</th>
    </tr>
  </thead>

  <tbody>
    <% @current_user.projects.reload.each do |project| %>
      <tr>
        <td><%= link_to project.project_name, user_project_path(project.user_id, project.id), method: :get %></td>
        <td><%= link_to 'Show', user_project_path(project.user_id, project.id) %></td>
        <td><%= link_to "", user_project_path(project.user_id, project.id), class: "glyphicon glyphicon-trash", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


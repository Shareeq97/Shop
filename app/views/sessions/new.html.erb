<div>
  <% if alert %>
      <div class="alert-message">
        <%= flash[:alert] %>
      </div>
  <% end %>
 	<br>
 	<%= form_tag '/login' do %>
	<fieldset>
		<legend>Please log in </legend>
		<table style="margin: 0 auto;">
			<tr>
				<td><%= label_tag :email, 'Email:' %></td>
				<td><%= text_field_tag :email, params[:email] %></td>
			</tr>
			<tr>
				<td><%= label_tag :password, 'Password:' %></td>
				<td><%= password_field_tag :password, params[:password] %></td>
			</tr>
		</table>
		<div style="text-align: center;">
			<%= submit_tag "Login"%>
		</div>
	</fieldset>
	<% end %>
	<p style="text-align: center;">
		or<br>
      <a href="<%= @login_url %>" role="button" id="connect-button">Connect to Outlook</a>
	</p>	
</div>
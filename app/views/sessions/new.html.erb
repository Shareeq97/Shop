<div>
  <% if alert %>
      <div class="alert-message">
        <%= flash[:alert] %>
      </div>
  <% end %>
 	<br>
 	<%= form_tag '/login', class:"login-form" do %>
		<fieldset>
			<legend>Please log in </legend>
			<table>
				<tr>
					<td><%= label_tag :email, 'Email:' %></td>
					<td><%= text_field_tag :email, params[:email] %></td>
				</tr>
				<tr>
					<td><%= label_tag :password, 'Password:' %></td>
					<td><%= password_field_tag :password, params[:password] %></td>
				</tr>
			</table>
			<div>
				<%= submit_tag "Login"%>
			</div>
		</fieldset>
		<p>
			or<br>
	    <a href="<%= @login_url %>" role="button" id="connect-button">Log In With Outloook Email</a>
		</p>
	<% end %>
</div>
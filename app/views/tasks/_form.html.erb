  <div>
    <div class="panel panel-default">
      <div class="panel-head">
        <h4 class="panel-title">
          <button class="btn add" type="button" data-toggle="collapse" data-target=<%= "#task-#{ feature.id }"%> >ADD TASK</button>
        </h4>
      </div>
      <div id= "<%="task-#{ feature.id }" %>" class="panel-collapse collapse">
        <div class="panel-body">
          <div>
            <%= form_with(model: [feature.tasks.build], url: user_project_feature_tasks_path( @user, @project, feature), method: "post",local: true) do |form| %>
              <div class="field">
                <strong>Task Name:</strong>
                <%= form.text_field :task_name %>
              </div>
              <div class="actions">
                <%= form.submit %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

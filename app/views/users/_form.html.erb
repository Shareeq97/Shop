<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h3><u><%= pluralize(user.errors.count, "error") %> prohibited this user from Sign Up:</u></h3>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <td><%= form.label :first_name %></td>
      <td><%= form.text_field :first_name, placeholder: "(Optional)" %></td>
    </tr>
    <tr>
      <td><%= form.label :last_name %></td>
      <td><%= form.text_field :last_name, placeholder: "(Optional)" %></td>
    </tr>
    <tr>
      <td><%= form.label :phone_number %></td>
      <td><%= form.text_field :phone_number, placeholder: "(Optional)" %></td>
    </tr>
    <tr>
      <td><%= form.label :email %><b>*</b></td>
      <td><%= form.text_field :email %></td>
    </tr>
    <tr>
      <td><%= form.label :password %><b>*</b></td>
      <td><%= form.password_field :password %></td>
    </tr>
    <tr>
      <td><%= form.label :password_confirmation %><b>*</b></td>
      <td><%= form.password_field :password_confirmation %></td>
    </tr>
  </table>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
